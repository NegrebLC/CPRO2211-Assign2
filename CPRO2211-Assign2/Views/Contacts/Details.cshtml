@model Contact

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Contact Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                First Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                Last Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                Phone:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Organization:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Organization)
            </dd>
            <dt class="col-sm-2">
                Category:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-2">
                Date Added:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateAdded)
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-danger" asp-action="delete" asp-route-id="@Model?.Id">Delete</a>
        <a class="btn btn-secondary" asp-controller="home" asp-action="index">Back</a>
    </div>
</div>