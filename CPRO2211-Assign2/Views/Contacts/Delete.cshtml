@model Contact

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h3>Are you sure you want to delete this contact?</h3>
    <div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dt>First Name:</dt>
                    <dd>@Html.DisplayFor(model => model.FirstName)</dd>
                    <dt>Last Name:</dt>
                    <dd>@Html.DisplayFor(model => model.LastName)</dd>
                    <dt>Phone:</dt>
                    <dd>@Html.DisplayFor(model => model.Phone)</dd>
                    <dt>Email:</dt>
                    <dd>@Html.DisplayFor(model => model.Email)</dd>
                    <dt>Organization:</dt>
                    <dd>@Html.DisplayFor(model => model.Organization)</dd>
                    <dt>Category:</dt>
                    <dd>@Html.DisplayFor(model => model.Category.Name)</dd>
                    <dt>Date Added:</dt>
                    <dd>@Html.DisplayFor(model => model.DateAdded)</dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="home" asp-action="index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
