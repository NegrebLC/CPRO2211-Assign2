@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Contact List</h1>
    <p>
        <a class="btn btn-primary" asp-controller="contacts" asp-action="add">Add Contact</a>
    </p>

    <!-- Small Screen View (Stacked Layout) -->
    <div class="d-block d-sm-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@item.FirstName @item.LastName</h5>
                    <p class="card-text"><strong>Phone:</strong> @item.Phone</p>
                    <p class="card-text"><strong>Email:</strong> @item.Email</p>
                    <p class="card-text"><strong>Organization:</strong> @item.Organization</p>
                    <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                    <p class="card-text"><strong>Date Added:</strong> @item.DateAdded.ToShortDateString()</p>
                    <div class="btn-group" role="group">
                        <a class="btn btn-secondary" asp-controller="contacts" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="contacts" asp-action="details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-controller="contacts" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Large Screen View (Table Layout) -->
    <div class="d-none d-sm-block">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Organization</th>
                    <th scope="col">Category</th>
                    <th scope="col">Date Added</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Organization</td>
                        <td>@item.Category.Name</td>
                        <td>@item.DateAdded.ToShortDateString()</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-secondary" asp-controller="contacts" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-primary" asp-controller="contacts" asp-action="details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger" asp-controller="contacts" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>